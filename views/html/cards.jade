.card.radius.shadowDepth1.card-tolerance
    a(ng-href="{{ '/' + item.clase +'/'+ item.nombre}}")
        .card__image.border-tlr-radius
            img.border-tlr-radius(ng-src=" {{ item.picture || '/images/trigo.jpg' }} ", alt='image')
        .card__content.card__padding
            .card__share
                #share.share-toggle.share-icon
            .card__meta
                h2(ng-bind="item.nombre")
            article.card__article
                p(ng-bind="item.description")
    .card__action
        .card__author
            img(ng-src="{{ item.picture || '/images/user.png' }}", alt='user')
            .card__author-content
                span by 
                a(href="'/user/profile/' + item.autor.username" ng-bind="item.autor.username")